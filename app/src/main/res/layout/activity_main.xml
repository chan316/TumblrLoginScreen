<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#33465d"
    tools:context="com.codepath.tumblrloginscreen.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#00D1DF"
        android:layout_height="match_parent">
        <TextView
            android:text="Follow the world's creators"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                xmlns:tools="http://schemas.android.com/tools"
                tools:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <ImageView
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <ImageView
                xmlns:tools="http://schemas.android.com/tools"
                tools:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <ImageView
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <ImageView
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>
            <ImageView
                xmlns:tools="http://schemas.android.com/tools"
                tools:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="0.3"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33465d"
        android:layout_alignParentBottom="true"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/dark_button_gradient"
            android:textColor="#FFF"
            android:layout_marginRight="7dp"
            android:text="Log in"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/light_button_gradient"
            android:textColor="#FFF"
            android:layout_marginLeft="7dp"
            android:text="Sign up"/>
        />
    </LinearLayout>
</RelativeLayout>
